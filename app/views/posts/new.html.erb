<h1>New post</h1>

<% form_for(new_post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :poster_id %><br />
    <%= f.text_field :poster_id %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :origin %><br />
    <%= f.text_field :origin %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
